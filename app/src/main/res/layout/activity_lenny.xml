<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".business.main.LennyActivity">

    <View
        android:id="@+id/view_holder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"></View>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/db_et">

        <TextView
            android:id="@+id/conversation_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:text="Hello World!"/>
    </ScrollView>

    <EditText
        android:id="@+id/db_et"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/start_btn"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="8dp"
        android:inputType="number"
        android:maxLength="8"/>


    <TextView
        android:id="@+id/state_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="65dp"
        android:text="Hello World!"/>

    <Button
        android:id="@+id/start_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/view_holder"
        android:text="开始"/>

    <Button
        android:id="@+id/stop_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/view_holder"
        android:text="停止"/>
</RelativeLayout>